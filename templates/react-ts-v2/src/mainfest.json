{
  "manifest_version": 2,
  "name": "react-chrome-extension",
  "description": "chrome extension for react",
  "version": "1.0.0",
  "browser_action": {
    "default_title": "react-chrome-extension",
    "default_icon": "assets/logo.png",
    "default_popup": "popup/index.html"
  },
  "permissions": [
    "webRequestBlocking",
    "notifications",
    "tabs",
    "webRequest",
    "http://*/",
    "https://*/",
    "<all_urls>",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": ["background/index.js"]
  },
  "devtools_page": "devtools/index.html",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [{
    "matches": [
      "https://*.google.com/*"
    ],
    "js": [
      "content/index.js"
    ],
    "run_at": "document_end"
  }],
  "web_accessible_resources": ["inject/index.js"]
}
