{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "noImplicitAny": false,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*"
  ]
}
