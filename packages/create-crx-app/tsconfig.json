{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES2015", "DOM"],
    "outDir": "./dist",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
  },
  "include": ["./src/*", "index.ts"],
  "exclude": ["templates", "dist"]
}
